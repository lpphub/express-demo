<!DOCTYPE html>
<html>
<head>
    <title>用户</title>
    <% include ../base.ejs %>
    <link rel="stylesheet" href="js/plugins/pagination/pagination.css">
</head>
<body>
<div class="col-md-12">
    <div class="block-flat">
        <div class="header">
            <h3>Basic DataTable</h3>
        </div>
        <div class="col-md-12">
            <div class="pull-right" style="padding-top: 5px;"><label><input type="text" class="form-control"
                                                                            placeholder="Search"></label></div>
        </div>
        <div class="content">
            <div class="table-responsive">
                <table class="table table-bordered" id="datatable">
                    <thead>
                    <tr>
                        <th>Uid</th>
                        <th>PatientName</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < rows.length; i++) { %>
                    <tr>
                        <td><%= rows[i].uid %></td>
                        <td><%= rows[i].patientName %></td>
                        <td class="center"><%= rows[i].status %></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="total">
                        total <%= total %> entries
                    </div>
                </div>
                <div class="col-xs-6">
                    <div id="pagination" class="pagination"></div>
                </div>
            </div>
            <input type="hidden" id="total" name="total" value="<%= total %>"/>
            <input type="hidden" id="userId" value="<%= userId %>"/>
        </div>
    </div>
</div>
<script type="text/javascript" src="js/plugins/pagination/jquery.pagination.js"></script>
<script type="text/javascript">
    $(function () {
        var Request = GetRequest();
        var page = typeof Request['page'] == 'undefined' ? 0 : Request['page']; // 当前页数
        var count = parseInt($("#total").val());
        var params = '&userId=' + $("#userId").val();
        $('#pagination').pagination(
                count,
                {
                    current_page: page,
                    items_per_page: 20,
                    link_to: 'medclips?page=__id__' + params
                });
    });
</script>
</body>
</html>
